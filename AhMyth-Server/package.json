{
  "name": "ahmyth-server",
  "version": "1.0.0",
  "description": "Rewrite of original electron app to be hosted as a remote web server with some added features",
  "main": "dist/index.js",
  "repository": "https://github.com/Devil7DK/AhMyth-Reborn",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "start": "ts-node-dev --respawn --no-notify src/server/index.ts",
    "clean": "rimraf dist .parcel-cache",
    "build:web": "parcel build --target web",
    "build:server": "parcel build --target server --config \"@parcel/config-default\" && cpy ./tools ./dist/",
    "build": "npm run clean && npm run build:server && npm run build:web",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write ."
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version"
  ],
  "dependencies": {
    "@fluentui/react-components": "^9.43.3",
    "@fluentui/react-icons": "^2.0.224",
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "axios": "^1.6.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cli-highlight": "^2.1.11",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "express-static-gzip": "^2.1.7",
    "file-saver": "^2.0.5",
    "formik": "^2.4.5",
    "fs-extra": "^11.2.0",
    "geoip-lite": "^1.4.9",
    "humanize-duration": "^3.31.0",
    "leaflet": "^1.9.4",
    "mobx": "^6.12.0",
    "mobx-react-lite": "^4.0.5",
    "multer": "^1.4.5-lts.1",
    "process": "^0.11.10",
    "prop-types": "^15.8.1",
    "queue": "^6.0.2",
    "react": "^18.2.0",
    "react-country-flag": "^3.1.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "react-router": "^6.21.1",
    "react-router-dom": "^6.21.1",
    "readdirp": "^3.6.0",
    "reflect-metadata": "^0.2.1",
    "routing-controllers": "^0.10.4",
    "sequelize": "^6.35.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "sqlite3": "^5.1.6",
    "typedi": "^0.10.0",
    "wavesurfer.js": "^7.6.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xml2js": "^0.6.2",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@parcel/compressor-brotli": "^2.10.3",
    "@parcel/compressor-gzip": "^2.10.3",
    "@parcel/config-default": "^2.10.3",
    "@parcel/core": "^2.10.3",
    "@parcel/fs": "^2.10.3",
    "@parcel/transformer-sass": "^2.10.3",
    "@types/express": "^4.17.21",
    "@types/file-saver": "^2.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/geoip-lite": "^1.4.4",
    "@types/humanize-duration": "^3.27.3",
    "@types/leaflet": "^1.9.8",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "buffer": "^5.5.0||^6.0.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "parcel": "^2.10.3",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "*"
  },
  "resolutions": {
    "strip-ansi": "6.0.1"
  },
  "targets": {
    "web": {
      "source": "./src/web/index.html",
      "context": "browser",
      "distDir": "./dist/public",
      "engines": {
        "browsers": "last 2 chrome versions"
      }
    },
    "server": {
      "source": "./src/server/index.ts",
      "context": "node",
      "distDir": "./dist",
      "scopeHoist": false,
      "includeNodeModules": false,
      "engines": {
        "node": "18.x"
      }
    }
  },
  "staticFiles": [
    {
      "staticPath": "static"
    }
  ]
}
